{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "plugins": ["jest"],
    "extends": ["eslint:recommended","plugin:jest/recommended"],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}